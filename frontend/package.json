{
  "name": "coflux",
  "private": true,
  "scripts": {
    "build:js": "esbuild src/main.ts --bundle --outfile=out/app.js --minify",
    "build:css": "tailwindcss --input=src/style.css --output=out/app.css --minify",
    "build": "npm run build:js && npm run build:css",
    "dev:js": "esbuild src/main.ts --bundle --outfile=../server/priv/static/app.js --watch",
    "dev:css": "tailwindcss --input=src/style.css --output=../server/priv/static/app.css --watch",
    "dev": "concurrently \"npm run dev:js\" \"npm run dev:css\"",
    "prettier": "prettier --check src/",
    "eslint": "eslint src/"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.688.0",
    "@headlessui/react": "^2.2.4",
    "@tabler/icons-react": "^3.33.0",
    "@topical/react": "^0.3.2",
    "classnames": "^2.5.1",
    "elkjs": "^0.10.0",
    "lodash": "^4.17.21",
    "luxon": "^3.6.1",
    "micromark": "^4.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@tailwindcss/cli": "^4.1.7",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/lodash": "^4.17.7",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.4",
    "eslint": "^9.27.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
